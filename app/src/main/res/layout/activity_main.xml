            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/intro" />
        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </View>


        <TextView
            style="@style/text_properties"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_one_no" />.

        <TextView
            style="@style/text_properties"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_one" />.

        <RadioGroup
            android:id="@+id/radio_group_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RadioButton
                android:id="@+id/answer_question_one_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/option_A_one"
                android:textSize="16sp"/>

            <RadioButton
                android:id="@+id/answer_question_one_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/option_B_one"
                android:textSize="16sp"/>

            <RadioButton
                android:id="@+id/answer_question_one_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/option_C_one"
                android:textSize="16sp"/>

            <RadioButton
                android:id="@+id/answer_question_one_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/option_D_one"
                android:textSize="16sp"/>
        </RadioGroup>
        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </View>


        <TextView
            style="@style/text_properties"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_two_no" />.
        <TextView
            style="@style/text_properties"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/question_two"/>

        <EditText
            android:id="@+id/answer_question_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/your_response"
            android:inputType="textMultiLine" />

        <TextView
            style="@style/text_properties"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_three_no" />.

        <TextView
            android:id="@+id/question_three"
            style="@style/text_properties"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_three" />.

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/instruction" />.

        <CheckBox
