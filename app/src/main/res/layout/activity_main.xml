                android:textSize="16sp"/>
        </RadioGroup>
        <TextView
            style="@style/text_properties"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_ten_no"/>
        <TextView
            style="@style/text_properties"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_ten"/>
        <RadioGroup
            android:id="@+id/radio_group_seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/answer_ten_option_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/option_A_ten"
                android:textSize="16sp"/>
            <RadioButton
                android:id="@+id/answer_ten_option_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/option_B_ten"
                android:textSize="16sp"/>
            <RadioButton
                android:id="@+id/answer_ten_option_three"
